<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Adicione isso no <head> do seu HTML para carregar FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/StiloMenu.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
<nav id="sidebar" class="menu_fixo">
    <div class="profile">
        <i class="fas fa-user profile-icon"></i> <!-- Ícone de usuário -->
        <h3 class="profile-name">Fulano de Tal</h3>
    </div>
    <ul class="menu-items">
        <li><a href="#" class="active" data-icon="&#xf015;"><span>Home</span></a></li>
        <li><a href="#" data-icon="&#xf0c0;"><span>Usuários</span></a></li>
        <li><a href="#" data-icon="&#xf0f3;"><span>Tarefas</span></a></li>
        <li><a href="#" data-icon="&#xf05a;"><span>Sobre</span></a></li>
    </ul>
    <div class="logout">
        <a href="#"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>
</nav>
 <main>
     <div class="container body-content">
         @RenderBody()
     </div>
 </main>
    <script src="~/Scripts/MenuJS.js"></script> <!-- Certifique-se de que o caminho esteja correto -->
</body>
</html>